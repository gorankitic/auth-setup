{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "src/*": ["*"]
    }
  },
  "include": ["src"]
}